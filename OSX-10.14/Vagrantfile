authorized_keys = ["ssh-rsa  jenkins@main",
                   "ssh-rsa  jenkins@admin1"]

Vagrant.configure(2) do |config|
  config.vm.provision "shell", privileged: true, inline: 'echo "*/10 * * * * sudo /usr/sbin/ntpdate -u 0.north-america.pool.ntp.org 1.north-america.pool.ntp.org 2.north-america.pool.ntp.org 3.north-america.pool.ntp.org" | crontab -'

  config.vm.synced_folder ".", "/vagrant", disabled: true

  [21802].each do |port|
    config.vm.define "osx-14-#{port}" do |node|
      node.vm.box = "ashiq/osx-10.14"
      # node.vm.box_version = "0.1"
      node.vm.network "forwarded_port", guest: 22, host: port

      node.vm.provider "virtualbox" do |vb|
	# vb.gui = true
        vb.name = "osx-14-#{port}"
        vb.memory = "4096"
	vb.cpus = "2"
        vb.linked_clone = true
	vb.customize 'pre-boot', ['modifyvm', :id, '--audio', 'none']
      end

      node.vm.provision "shell", privileged: false, inline: <<EOF
defaults -currentHost write com.apple.screensaver idleTime 0
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew update
sudo chown -R jenkins:jenkins /usr/local/bin
sudo chown -R jenkins:jenkins /usr/local/include
sudo chown -R jenkins:jenkins /usr/local/lib
sudo chown -R jenkins:jenkins /usr/local/sbin
sudo chown -R jenkins:jenkins /usr/local/var
sudo chown -R jenkins:jenkins /usr/local/opt
sudo chown -R jenkins:jenkins /usr/local/share/zsh
sudo chown -R jenkins:jenkins /usr/local/share/zsh/site-functions
sudo chown -R jenkins:jenkins /usr/local/var/homebrew
sudo chown -R jenkins:jenkins /usr/local/var/homebrew/linked
sudo chown -R jenkins:jenkins /usr/local/Cellar
sudo chown -R jenkins:jenkins /usr/local/Caskroom
sudo chown -R jenkins:jenkins /usr/local/Homebrew
sudo chown -R jenkins:jenkins /usr/local/Frameworks
brew cask install caskroom/versions/java8
EOF

      authorized_keys.each do |key|
        node.vm.provision "shell", inline: "echo \"#{key}\" >> /Users/jenkins/.ssh/authorized_keys"
      end
    end
  end
end
